<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/box"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimension_14"
            android:fontFamily="@font/arcanum"
            android:gravity="center"
            android:text="@string/round_text"
            android:textAllCaps="true"
            android:textColor="@color/light_font_color"
            android:textSize="@dimen/header_font_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimension_4"
            android:gravity="center"
            android:text="@string/starting_score"
            android:textColor="@color/dark_font_color"
            android:textSize="@dimen/score_font_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dimension_1"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/layout_weight"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/fighter_one_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:cursorVisible="false"
                    android:fontFamily="@font/arcanum"
                    android:gravity="center"
                    android:hint="@string/fighter_one_hint"
                    android:inputType="textMultiLine"
                    android:textColor="@color/light_font_color"
                    android:textColorHint="@color/light_font_color"
                    android:textSize="@dimen/subheading_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fighter_one_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/starting_score"
                    android:textColor="@color/dark_font_color"
                    android:textSize="@dimen/score_font_big" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimension_8"
                    android:layout_marginRight="@dimen/dimension_8"
                    android:background="@color/button_background_color"
                    android:fontFamily="@font/tiza_chalk"
                    android:onClick="closeRoundF1"
                    android:text="@string/close_round"
                    android:textColor="@color/dark_font_color"
                    android:textSize="@dimen/button_font_size"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimension_8"
                    android:layout_marginRight="@dimen/dimension_8"
                    android:layout_marginTop="@dimen/dimension_4"
                    android:background="@color/button_background_color"
                    android:fontFamily="@font/tiza_chalk"
                    android:onClick="clearWinnerF1"
                    android:text="@string/clear_winner"
                    android:textColor="@color/dark_font_color"
                    android:textSize="@dimen/button_font_size"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimension_8"
                    android:layout_marginRight="@dimen/dimension_8"
                    android:layout_marginTop="@dimen/dimension_4"
                    android:background="@color/button_background_color"
                    android:fontFamily="@font/tiza_chalk"
                    android:onClick="totalDominanceF1"
                    android:text="@string/total_dominance"
                    android:textColor="@color/dark_font_color"
                    android:textSize="@dimen/button_font_size"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimension_8"
                    android:layout_marginRight="@dimen/dimension_8"
                    android:layout_marginTop="@dimen/dimension_4"
                    android:background="@color/button_background_color"
                    android:fontFamily="@font/tiza_chalk"
                    android:onClick="overMatchedF1"
                    android:text="@string/over_matched"
                    android:textColor="@color/dark_font_color"
                    android:textSize="@dimen/button_font_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="@dimen/dimension_1"
                android:layout_height="match_parent"
                android:background="@color/dark_font_color">

            </View>

            <LinearLayout
                android:layout_width="@dimen/dimension_1"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/layout_weight"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/fighter_two_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:cursorVisible="false"
                    android:fontFamily="@font/arcanum"
                    android:gravity="center"
                    android:hint="@string/fighter_two_hint"
                    android:inputType="textMultiLine"
                    android:textColor="@color/light_font_color"
                    android:textColorHint="@color/light_font_color"
                    android:textSize="@dimen/subheading_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fighter_two_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/starting_score"
                    android:textColor="@color/dark_font_color"
                    android:textSize="@dimen/score_font_big" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimension_8"
                    android:layout_marginRight="@dimen/dimension_8"
                    android:background="@color/button_background_color"
                    android:fontFamily="@font/tiza_chalk"
                    android:onClick="closeRoundF2"
                    android:text="@string/close_round"
                    android:textColor="@color/dark_font_color"
                    android:textSize="@dimen/button_font_size"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimension_8"
                    android:layout_marginRight="@dimen/dimension_8"
                    android:layout_marginTop="@dimen/dimension_4"
                    android:background="@color/button_background_color"
                    android:fontFamily="@font/tiza_chalk"
                    android:onClick="clearWinnerF2"
                    android:text="@string/clear_winner"
                    android:textColor="@color/dark_font_color"
                    android:textSize="@dimen/button_font_size"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimension_8"
                    android:layout_marginRight="@dimen/dimension_8"
                    android:layout_marginTop="@dimen/dimension_4"
                    android:background="@color/button_background_color"
                    android:fontFamily="@font/tiza_chalk"
                    android:onClick="totalDominanceF2"
                    android:text="@string/total_dominance"
                    android:textColor="@color/dark_font_color"
                    android:textSize="@dimen/button_font_size"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimension_8"
                    android:layout_marginRight="@dimen/dimension_8"
                    android:layout_marginTop="@dimen/dimension_4"
                    android:background="@color/button_background_color"
                    android:fontFamily="@font/tiza_chalk"
                    android:onClick="overMatchedF2"
                    android:text="@string/over_matched"
                    android:textColor="@color/dark_font_color"
                    android:textSize="@dimen/button_font_size"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimension_14"
                android:layout_marginTop="@dimen/dimension_14"
                android:background="@color/button_background_color"
                android:fontFamily="@font/tiza_chalk"
                android:onClick="reset"
                android:padding="@dimen/dimension_8"
                android:text="@string/reset"
                android:textColor="@color/dark_font_color"
                android:textSize="@dimen/button_font_size"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
